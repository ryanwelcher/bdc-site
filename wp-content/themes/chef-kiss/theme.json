{
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"title": "Single Conference",
			"name": "single-conference",
			"postTypes": [ "conference" ]
		},
		{
			"title": "Conference archive",
			"name": "archive-conference",
			"postTypes": [ "conference" ]
		},
		{
			"title": "Recipe archive",
			"name": "archive-recipe",
			"postTypes": [ "recipe" ]
		},
		{
			"title": "Single Recipe",
			"name": "single-recipe",
			"postTypes": [ "recipe" ]
		}
	],
	"title": "Chef Kiss Theme",
	"settings": {
		"appearanceTools": true,
		"color": {
			"customDuotone": false,
			"customGradient": false,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#fff",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#E76F51",
					"name": "Highlight",
					"slug": "highlight"
				},
				{
					"color": "#2D2B55",
					"name": "Background",
					"slug": "background"
				}
			]
		},
		"layout": {
			"contentSize": "60rem",
			"wideSize": "64rem"
		},
		"typography": {
			"lineHeight": true,
			"customFontSize": false,
			"fontSizes": [
				{
					"slug": "sm",
					"size": "clamp(0.7rem, 0.09vw + 0.68rem, 0.75rem)"
				},
				{
					"slug": "base",
					"size": "clamp(0.88rem, 0.23vw + 0.82rem, 1rem)"
				},
				{
					"slug": "md",
					"size": "clamp(1.09rem, 0.43vw + 0.98rem, 1.33rem)"
				},
				{
					"slug": "lg",
					"size": "clamp(1.37rem, 0.74vw + 1.18rem, 1.78rem)"
				},
				{
					"slug": "xl",
					"size": "clamp(1.71rem, 1.2vw + 1.41rem, 2.37rem)"
				},
				{
					"slug": "xxl",
					"size": "clamp(2.14rem, 1.86vw + 1.67rem, 3.16rem)"
				},
				{
					"slug": "xxxl",
					"size": "clamp(2.67rem, 2.8vw + 1.97rem, 4.21rem)"
				}
			],
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Jost",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/Jost/Jost-VariableFont_wght.woff2"
							]
						},
						{
							"fontFamily": "Jost",
							"fontStyle": "italic",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/Jost/Jost-Italic-VariableFont_wght.woff2"
							]
						}
					],
					"fontFamily": "Jost",
					"name": "Jost",
					"slug": "jost"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Space Mono",
							"fontStyle": "regular",
							"fontWeight": "regular",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-Regular.ttf"
							]
						},
						{
							"fontFamily": "Space Mono",
							"fontStyle": "bold",
							"fontWeight": "bold",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-Bold.ttf"
							]
						},
						{
							"fontFamily": "Space Mono",
							"fontStyle": "italic",
							"fontWeight": "bold",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-BoldItalic.ttf"
							]
						},
						{
							"fontFamily": "Space Mono",
							"fontStyle": "italic",
							"fontWeight": "regular",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-Italic.ttf"
							]
						}
					],
					"fontFamily": "Space Mono",
					"name": "Space Mono",
					"slug": "space-mono"
				}
			]
		},
		"useRootPaddingAwareAlignments": true,
		"blocks": {
			"chef-kiss/time-remaining": {
				"border": {
					"radius": true
				}
			}
		},
		"custom": {
			"chef-kiss": {
				"level": {
					"icon": "'üë®‚Äçüç≥'"
				},
				"box-shadow": "rgba(0, 0, 0, 0.35) 0px 5px 15px;"
			}
		}
	},
	"styles": {
		"blocks": {
			"chef-kiss/time-remaining": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--xl )"
				}
			},
			"chef-kiss/level": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--md )",
					"fontWeight": "300"
				},
				"css": "& p {margin:0}"
			},
			"chef-kiss/cooking-time": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--md )",
					"fontWeight": "300"
				},
				"css": "& p {margin:0}"
			},
			"core/post-excerpt": {
				"typography": {
					"fontWeight": "200"
				}
			}
		},
		"color": {
			"background": "var( --wp--preset--color--background)",
			"text": "var( --wp--preset--color--text )"
		},
		"typography": {
			"fontFamily": "var( --wp--preset--font-family--jost )",
			"fontSize": "var( --wp--preset--font-size--base )"
		},
		"elements": {
			"heading": {
				"color": {
					"text": "var( --wp--preset--color--highlight )"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--lg )",
					"fontWeight": "600"
				}
			},
			"link": {
				"color": {
					"text": "var( --wp--preset--color--highlight )"
				}
			}
		},
		"spacing": {
			"blockGap": "1rem",
			"margin": {
				"bottom": "1rem",
				"left": "2rem",
				"right": "2rem",
				"top": "1rem"
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "results",
			"title": "Results"
		}
	]
}
