{
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"title": "Single Conference",
			"name": "single-conference",
			"postTypes": [ "conference" ]
		}
	],
	"title": "Chef Kiss Theme",
	"settings": {
		"appearanceTools": true,
		"color": {
			"customDuotone": false,
			"customGradient": false,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#fff",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#E76F51",
					"name": "Highlight",
					"slug": "highlight"
				},
				{
					"color": "#2D2B55",
					"name": "Background",
					"slug": "background"
				}
			]
		},
		"layout": {
			"contentSize": "60rem",
			"wideSize": "64rem"
		},
		"typography": {
			"fluid": true,
			"lineHeight": true,
			"customFontSize": false,
			"fontSizes": [
				{
					"slug": "sm",
					"size": "0.89rem",
					"fluid": {
						"min": "0.8rem",
						"max": "0.76rem"
					}
				},
				{
					"slug": "base",
					"size": "1rem",
					"fluid": {
						"min": "1rem",
						"max": "1.19rem"
					}
				},
				{
					"slug": "md",
					"size": "1.1rem",
					"fluid": {
						"min": "1.25rem",
						"max": "1.58rem"
					}
				},
				{
					"slug": "lg",
					"size": "1.31rem",
					"fluid": {
						"min": "1.56rem",
						"max": "2.115rem"
					}
				},
				{
					"slug": "xl",
					"size": "1.95rem",
					"fluid": {
						"min": "1.95rem",
						"max": "2.81rem"
					}
				}
			],
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Jost",
							"fontStyle": "normal",
							"fontWeight": "normal",
							"src": [
								"file:./assets/fonts/Jost/Jost-VariableFont_wght"
							]
						}
					],
					"fontFamily": "Jost",
					"name": "Jost",
					"slug": "jost"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Prata",
							"fontStyle": "normal",
							"fontWeight": "bold",
							"src": [
								"file:./assets/fonts/Prata/Prata-Regular.ttf"
							]
						}
					],
					"fontFamily": "Prata",
					"name": "Prata",
					"slug": "prata"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Space Mono",
							"fontStyle": "regular",
							"fontWeight": "regular",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-Regular.ttf"
							]
						},
						{
							"fontFamily": "Space Mono",
							"fontStyle": "bold",
							"fontWeight": "bold",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-Bold.ttf"
							]
						},
						{
							"fontFamily": "Space Mono",
							"fontStyle": "italic",
							"fontWeight": "bold",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-BoldItalic.ttf"
							]
						},
						{
							"fontFamily": "Space Mono",
							"fontStyle": "italic",
							"fontWeight": "regular",
							"src": [
								"file:./assets/fonts/Space_Mono/SpaceMono-Italic.ttf"
							]
						}
					],
					"fontFamily": "Space Mono",
					"name": "Space Mono",
					"slug": "space-mono"
				},
				{
					"fontFamily": "Montserrat, sans-serif",
					"name": "Montserrat",
					"slug": "montserrat"
				}
			]
		},
		"useRootPaddingAwareAlignments": true,
		"blocks": {
			"chef-kiss/time-remaining": {
				"border": {
					"radius": true
				}
			}
		},
		"custom": {
			"chef-kiss-level": {
				"icon": "'üë®‚Äçüç≥'"
			}
		}
	},
	"styles": {
		"blocks": {
			"chef-kiss/time-remaining": {
				"color": {
					"text": "var( --wp--preset--color--text )"
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--x-large)"
				}
			},
			"chef-kiss/level": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--md )",
					"fontWeight": "default"
				}
			},
			"chef-kiss/cooking-time": {
				"typography": {
					"fontSize": "var( --wp--preset--font-size--md )"
				}
			},
			"core/post-excerpt": {
				"color": {
					"text": "var( --wp--preset--color--card )"
				},
				"typography": {
					"fontSize": "var( --wp--preset--font-size--base )"
				}
			},
			"core/image": {
				"border": {
					"color": "var( --wp--preset--color--highlight )",
					"width": "1px"
				}
			}
		},
		"color": {
			"background": "var( --wp--preset--color--background)",
			"text": "var( --wp--preset--color--text )"
		},
		"typography": {
			"fontFamily": "var( --wp--preset--font-family--jost )",
			"fontSize": "var( --wp--preset--font-size--base )"
		},
		"elements": {
			"heading": {
				"color": {
					"text": "var( --wp--preset--color--highlight )"
				},
				"typography": {
					"fontFamily": "var( --wp--preset--font-family--jost )",
					"fontSize": "var( --wp--preset--font-size--xl )"
				}
			},
			"link": {
				"color": {
					"text": "var( --wp--preset--color--highlight )"
				}
			}
		},
		"spacing": {
			"blockGap": "2rem",
			"margin": {
				"bottom": "1rem",
				"left": "5rem",
				"right": "5rem",
				"top": "1rem"
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
